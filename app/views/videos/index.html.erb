<div class="home-2">
        <div class="container">
            <div class="row">
                <h3 class="header teal-text text-lighten-2"><%= @pagina_6.titulo %></h3>
                <div class="card-panel hoverable">
                    <div class="card-content">
                     <p><%= raw(@pagina_6.texto) %></p>
                     <% if usuario_signed_in? %>
                     <%= link_to  "Editar", edit_pagina_path(6), class: "btn-large waves-effect waves-light teal lighten-1"  %>
                     <%end%> 
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="container">
    <div class="row">
    <% @videos.each do |video| %>
        <div class="card-panel hoverable">
            <div class="card-content">
                <h5 class="header teal-text text-lighten-2"><%= video.titulo %></h5>
                <div class="video-container">
                <%= raw(video.url) %>
                </div>
                <%= raw(video.texto) %>
                <% if usuario_signed_in? %>
                <%= link_to edit_video_path(video), class: "btn-floating" do %>
                <i class="material-icons">edit</i>
                <%end%>
                <%= link_to video, method: :delete, data: { confirm: 'Deseja apagar ?' }, class: "btn-floating red" do%>
                <i class="material-icons">delete</i>
                <%end%>
                <%end%>
            </div>
        </div>
    <%end%>
    </div>
</div>