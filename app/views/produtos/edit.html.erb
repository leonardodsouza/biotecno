<div class="wrapper">
    <div class="container">
        <h3 class="header center teal-text text-lighten-2"><%= Produto.model_name.human %></h3>
    </div>
</div>
<div class="container">
    <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#produto">Produtos</a></li>
        <li class="tab col s3"><a  href="#fotos">Fotos</a></li>
    </ul>
    <div id="produto" class="col s12">
        <%= image_tag @produto.foto.url(:thumb), class: "img-thumbnail" %>
        <%= render 'form', produto: @produto %>        
    </div>
    <div id="fotos" class="col s12">
        <%= render 'fotos/form', foto: @foto %> 
        <div id="lista">
            <%= render 'fotos/lista' %>
        </div> 
    </div>
</div>