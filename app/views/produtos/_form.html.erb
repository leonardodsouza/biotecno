<%= form_with(model: produto, local: true) do |form| %>
  <% if produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(produto.errors.count, "error") %> prohibited this produto from being saved:</h2>

      <ul>
      <% produto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="file-field input-field col s12">
      <div class="btn">
        <span><%= t('foto') %></span>
        <%= form.file_field :foto, id: :produto_foto %>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= form.collection_select(:categoria_id, Categoria.all.order(:nome), :id, :nome, {required: true, :prompt => 'Selecione uma categoria' }) %>
    </div>  
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= form.text_field :modelo, id: :produto_modelo, required: true %>
      <%= form.label :modelo %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= form.text_area :resumo, id: :produto_resumo, class: "materialize-textarea", data: {length: "200"}, required: true %>
      <%= form.label :resumo %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= form.cktext_area :descricao, id: :produto_descricao, required: true%>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= form.text_field :video, id: :produto_video %>
      <%= form.label :video %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= form.submit class: "waves-effect waves-light btn" %>
      <%= link_to t('cancelar'), produtos_path, class: "waves-effect waves-light btn" %>
    </div>  
  </div>

<% end %>
